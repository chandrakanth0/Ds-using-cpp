#include<iostream>
int fact(int n);
int fact(int n){
if(n==1||n==0) return 1;
return n*fact(n-1);

}


int main(){
//std::cout<<"programm executing";
 // factorial n*(n-1)*(n-2)*.....(1)
int num;
std::cout<<"Enter the number to calculate factorial";
std::cin>>num;


if(num>=0){
    std::cout<<"The factorial of "<<num<<" is "<<fact(num);
}
else std::cout<<"factorial for non positive number doesnot exist";


    return 7;
}
